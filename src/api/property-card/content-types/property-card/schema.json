{
  "kind": "collectionType",
  "collectionName": "property_cards",
  "info": {
    "singularName": "property-card",
    "pluralName": "property-cards",
    "displayName": "Property Card",
    "description": "Tarjetas de propiedades para la p√°gina de reservar"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Casas Coloniales",
        "Departamentos"
      ],
      "required": true
    },
    "guests": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 20
    },
    "location": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "detailsUrl": {
      "type": "string",
      "required": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}