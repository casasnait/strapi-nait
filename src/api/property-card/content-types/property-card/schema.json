{
  "kind": "collectionType",
  "collectionName": "property_cards",
  "info": {
    "singularName": "property-card",
    "pluralName": "property-cards",
    "displayName": "Property Card",
    "description": "Tarjetas de propiedades para la página de reservar"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "tipo": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Loft",
        "Habitación",
        "Depa",
        "Casa"
      ]
    },
    "propiedad": {
      "type": "enumeration",
      "enum": [
        "Ilustre",
        "Margot",
        "Araiza",
        "Alhaja",
        "Zentra",
        "Nueve Esquinas"
      ]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "ubicacion": {
      "type": "enumeration",
      "enum": [
        "Centro",
        "Expo",
        "Andares"
      ]
    },
    "camas": {
      "type": "string"
    },
    "huespedes": {
      "type": "integer"
    },
    "detailsUrl": {
      "type": "string",
      "required": false
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    }
  }
}
